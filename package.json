{
  "name": "mtoast",
  "version": "3.1.0",
  "description": "Beautiful toast notifications for React applications",
  "private": true,
  "license": "BSD-3-Clause",
  "packageManager": "npm@8.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "build:registry": "npm run ./scripts/build-registry.ts",
    "format": "prettier \"**/*.{js,jsx,ts,tsx}\" --write",
    "sync": "git pull && npm i && npm run build:registry && npm run dev"
  },
  "devDependencies": {
    "turbo": "^2.5.0"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.3.1",
    "next": "^15.3.1",
    "react-icons": "^5.5.0",
    "styled-jsx": "^5.1.6"
  }
}
